<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_margin="5dp"
    android:background="@drawable/background_white_radius_5"
    android:elevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDate"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="1dp"
        android:background="@drawable/background_line_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/dayView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="28"
            android:gravity="center_horizontal"
            android:textColor="@color/blue"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="@id/layoutDate"
            app:layout_constraintStart_toStartOf="@id/layoutDate"
            app:layout_constraintEnd_toEndOf="@id/layoutDate"/>
        <TextView
            android:id="@+id/monthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:textSize="12sp"
            android:textColor="@color/blue3"
            app:layout_constraintTop_toBottomOf="@id/dayView"
            app:layout_constraintStart_toStartOf="@id/dayView"/>
        <TextView
            android:id="@+id/yearView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020"
            android:textSize="12sp"
            android:textColor="@color/blue3"
            app:layout_constraintTop_toBottomOf="@id/dayView"
            app:layout_constraintEnd_toEndOf="@id/dayView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/descriptionView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pembayaran cicilan pulau ke 5"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/layoutDate"
        app:layout_constraintEnd_toStartOf="@id/amountView"
        app:layout_constraintTop_toTopOf="@id/layoutDate"
        app:layout_constraintBottom_toBottomOf="@id/layoutDate"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/amountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 5.000.000"
        android:textSize="13sp"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="@id/layoutDate"
        app:layout_constraintBottom_toBottomOf="@id/layoutDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>